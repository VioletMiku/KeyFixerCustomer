<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CallFixer">

    <android.support.v7.widget.CardView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="15dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/corner">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@color/baseReleaseColor"
                app:layout_constraintTop_toTopOf="parent"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_height="150dp"
                android:layout_width="150dp"
                android:id="@+id/img_avatar"
                android:src="@drawable/ic_terrain_black_24dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_marginTop="250dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">

                <RelativeLayout
                    android:id="@+id/main_inf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:text="Tên thợ sửa: "
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/txt_fixername"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:text="Soviet Union"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/phone"
                        android:layout_below="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:text="Số điện thoại: "
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/txt_fixerphone"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:text="0962 766 121"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/rate"
                        android:layout_below="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:text="Điểm đánh giá: "
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/txt_rates"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:text="4/5"
                            android:textSize="20sp"/>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_below="@+id/main_inf"
                    android:layout_marginTop="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_marginTop="15dp"
                        android:background="@color/btnSignin"
                        android:id="@+id/btn_CallFixerbyapp"
                        android:textColor="@android:color/white"
                        android:text="Gọi bằng app"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                    <Button
                        android:layout_marginTop="15dp"
                        android:background="@color/btnSignin"
                        android:id="@+id/btn_CallFixerbyPhonenumber"
                        android:textColor="@android:color/white"
                        android:text="Gọi bằng điện thoại"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/baseReleaseColor"
                android:id="@+id/btnCancelRequest"
                android:text="H Ủ Y   >>"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>