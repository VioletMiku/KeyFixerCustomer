<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CallFixer">

    <android.support.v7.widget.CardView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/corner"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_height="96dp"
                android:layout_width="96dp"
                android:id="@+id/img_avatar"
                android:src="@drawable/ic_terrain_black_24dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                app:civ_border_color="#5e1e1e1e"
                app:civ_border_width="1dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:text="Tên thợ sửa: "
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/txt_fixername"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:text="Soviet Union"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:text="Số điện thoại: "
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/txt_fixerphone"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:text="0962 766 121"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:text="Điểm đánh giá: "
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/txt_rates"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:text="4/5"
                    android:textSize="20sp"/>
            </LinearLayout>

            <Button
                android:layout_marginTop="15dp"
                android:background="@color/btnSignin"
                android:id="@+id/btn_CallFixerbyapp"
                android:textColor="@android:color/white"
                android:text="Gọi thợ sửa bằng app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:layout_marginTop="8dp"
                android:background="@color/btnSignin"
                android:id="@+id/btn_CallFixerbyPhonenumber"
                android:textColor="@android:color/white"
                android:text="Gọi thợ sửa bằng số điện thoại"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>