<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="0"
                android:centerColor="#333333"
                android:centerY="0.6"
                android:endColor="@android:color/holo_blue_dark"
                android:startColor="#44D5AC"/>
            <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp"/>
            <padding/>
        </shape>
    </item>

    <item android:right="6dp" android:bottom="5dp" android:top="0dp">
    <shape
        android:shape="rectangle">
    <solid android:color="#00000000" />
    <stroke
        android:width="1dp"
        android:color="#9f808080" />
    <padding
        android:bottom="1dp"
        android:left="0dp"
        android:right="1dp"
        android:top="1dp" />
    </shape>
    </item>

    <item android:right="-1dp" android:bottom="-1dp" android:top="0dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#00000000" />
            <stroke
                android:width="1dp"
                android:color="#50000000" />
            <padding
                android:bottom="1dp"
                android:left="0dp"
                android:right="1dp"
                android:top="0dp" />
            <corners android:bottomLeftRadius="5dp"
                 android:topRightRadius="5dp"/>
        </shape>
    </item>

</layer-list>